
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>ĐĂNG NHẬP ADMIN</title>
    <meta charset="UTF-8">
    <link rel="icon" type="image/png" href="~/Content/Hinh/icon_tdmu.png">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Content_Login/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Content_Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Content_Login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Content_Login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Content_Login/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Content_Login/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Content_Login/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Content_Login/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Content_Login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Content_Login/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('../../Content/Content_Login/images/bg-01.jpg');">
            <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
                <form method="POST" class="login100-form validate-form flex-sb flex-w">
                    <span class="login100-form-title p-b-53">
                        ĐĂNG NHẬP VỚI
                    </span>

                    <a href="#" class="btn-face m-b-20">
                        <i class="fa fa-facebook-official"></i>
                        Facebook
                    </a>

                    <a href="#" class="btn-google m-b-20">
                        <img src="~/Content/Content_Login/images/icons/icon-google.png" alt="GOOGLE">
                        Google
                    </a>



                    <div class="p-t-31 p-b-9">
                        <span class="txt1">
                            Tên tài khoản
                        </span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Bắt buộc nhập tên tài khoản">
                        <input class="input100" type="text" value="admin" name="username">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="p-t-13 p-b-9">
                        <span class="txt1">
                            Mật khẩu
                        </span>

                        <a href="#" class="txt2 bo1 m-l-5">
                            Quên?
                        </a>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Bắt buộc nhập mật khẩu">
                        <input class="input100" type="password" value="admin" name="password">
                        <span class="focus-input100"></span>
                    </div>

                    <div class="container-login100-form-btn m-t-17">
                        <button class="login100-form-btn">
                            Đăng nhập
                        </button>
                    </div>

                    <div class="w-full text-center p-t-20">
                        @ViewBag.ThongBao
                    </div>


                    <div class="w-full text-center p-t-55">
                        <span class="txt2">
                            Bạn không phải là thành viên?
                        </span>

                        <a href="#" class="txt2 bo1">
                            Đăng ký ngay
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/Content/Content_Login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Content_Login/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Content_Login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/Content_Login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Content_Login/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Content_Login/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/Content_Login/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Content_Login/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Content_Login/js/main.js"></script>

</body>
</html>